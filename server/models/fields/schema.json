{
    "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "EmailFieldTemplate",
            "description": "Schema for the Email field template.",
                "type": "object",
                    "properties": {
        "uid": {
            "type": "string",
                "const": "{b9cabff6-d2d1-499c-9bc6-9c5dae540443}",
                    "description": "Unique identifier for the email field."
        },
        "type": {
            "type": "string",
                "const": "varchar",
                    "description": "The underlying database type."
        },
        "length": {
            "type": "number",
                "const": 255,
                    "description": "The fixed length of the varchar field."
        },
        "required": {
            "type": "boolean",
                "description": "Indicates whether the field is required."
        },
        "default": {
            "type": ["string", "null"],
                "description": "The default value for the field, if any."
        },
        "documentation": {
            "type": "object",
                "description": "Metadata describing the field.",
                    "properties": {
                "description": {
                    "type": "string",
                        "const": "Email Field",
                            "description": "A brief description of the field."
                },
                "examples": {
                    "type": "array",
                        "items": {
                        "type": "string"
                    },
                    "const": ["user@example.com", "contact@company.org"],
                        "description": "Example email addresses."
                },
                "usage": {
                    "type": "string",
                        "const": "Used for storing email addresses",
                            "description": "Usage information for the field."
                }
            },
            "required": ["description", "examples", "usage"]
        }
    },
    "required": ["uid", "type", "length", "documentation"]
}
